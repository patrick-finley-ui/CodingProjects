# UiPath Configuration for Invoice Processing App
# Copy this file to .env.local and fill in your actual values

# UiPath Authentication Settings
VITE_UIPATH_BASE_URL=https://staging.uipath.com/
VITE_UIPATH_ORG_NAME=your-org-name
VITE_UIPATH_TENANT_NAME=your-tenant-name
VITE_UIPATH_CLIENT_ID=your-client-id

# Redirect URI - Use localhost for local development
VITE_UIPATH_REDIRECT_URI=http://localhost:5173

# OAuth Scope - Space-separated list of scopes
VITE_UIPATH_SCOPE=offline_access

# Debug Settings
VITE_SHOW_DEBUG_BOX=false

# Image Settings (optional)
# Set to 'true' to use local images instead of remote URLs
VITE_USE_LOCAL_IMAGES=true
# VITE_DOD_LOGO_URL=https://example.com/dod-logo.png
# VITE_UIPATH_LOGO_URL=https://example.com/uipath-logo.png

# Maestro Process Configuration
VITE_MAESTRO_PROCESS_KEY=your-maestro-process-key
VITE_MAESTRO_FOLDER_ID=your-folder-id-number

# CORS Proxy Configuration
# Set to 'true' to enable CORS proxy (requires uncommenting proxy config in vite.config.ts)
# Set to 'false' to use direct API calls (may require CORS browser extension)
VITE_USE_CORS_PROXY=false
