# UiPath Configuration
# Copy this file to .env and update with your actual values

# UiPath Cloud Configuration
UIPATH_BASE_URL=https://cloud.uipath.com
UIPATH_ORG_NAME=your-organization-name
UIPATH_TENANT_NAME=your-tenant-name

# Authentication (choose one method)
# Method 1: Personal Access Token (PAT)
UIPATH_SECRET=your-personal-access-token

# Method 2: OAuth (uncomment and configure if using OAuth)
# UIPATH_CLIENT_ID=your-client-id
# UIPATH_REDIRECT_URI=http://localhost:3000
# UIPATH_SCOPE=your-scopes

# Development Settings
NODE_ENV=development
PORT=3000
