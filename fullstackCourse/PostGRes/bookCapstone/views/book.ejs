<%- include('partials/header') %>
    <div class="container">
        <div class="row justify-content-center align-items-start">
            <% if (book.image) { %>
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <img src="<%= book.image %>" style="max-width: 200px; max-height: 400px;"
                        class="img-fluid rounded shadow-sm" alt="Cover image of <%= book.title %>">
                </div>
                <% } %>
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= book.title %>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <%= book.author %>
                                </h6>
                                <p class="card-text mb-2">
                                    ISBN: <%= book.isbn %>
                                </p>
                                <p class="card-text text-muted mb-2">
                                    Published: <%= book.published_year %>
                                </p>
                                <p class="card-text mb-2">
                                    Genre: <%= book.genre %>
                                </p>
                                <p class="card-text mb-2">
                                    Rating: <%= book.rating %>
                                </p>
                                <p class="card-text mb-2">
                                    Notes: <%= book.notes %>
                                </p>
                                <p class="card-text text-muted mb-2">
                                    Review Date: <%= book.review_date %>
                                </p>
                            </div>

                            <div class="d-flex justify-content-end p-3">
                                <a href="/edit-book/<%= book.book_id %>" class="btn btn-warning me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form action="/delete-book/<%= book.book_id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this book?');">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
    <%- include('partials/footer') %>