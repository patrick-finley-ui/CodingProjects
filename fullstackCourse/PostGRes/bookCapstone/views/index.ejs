<%- include('partials/header') %>
    <div class="container mb-4 d-flex justify-content-end">
        <a href="/add-review" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Review
        </a>
    </div>

    <div class="container">
        <div class="row">
            <% books.forEach(function(book) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <% if (book.image) { %>
                            <img src="<%= book.image %>" class="card-img-top" alt="Cover image of <%= book.title %>">
                            <% } %>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= book.title %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <%= book.author %>
                                    </h6>
                                    <p class="card-text mb-2">
                                        ISBN: <%= book.isbn %>
                                    </p>
                                    <p class="card-text text-muted mb-2">Published: <%= book.published_year %>
                                    </p>
                                    <p class="card-text mb-2">
                                        Genre: <%= book.genre %>
                                    </p>
                                </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <%- include('partials/footer') %>