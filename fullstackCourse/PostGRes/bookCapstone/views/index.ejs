<%- include('partials/header') %>

    <div class="container mb-4 d-flex justify-content-start">
        <div class="btn-group me-2" role="group" aria-label="Sort filters">
            <a href="?sort=rating" class="btn btn-outline-secondary<%= sortby === 'rating' ? ' active' : '' %>"
                title="Sort by Rating">
                <i class="bi bi-filter"></i> Rating
            </a>
            <a href="?sort=review_date"
                class="btn btn-outline-secondary<%= sortby === 'review_date' ? ' active' : '' %>"
                title="Sort by Date Added">
                <i class="bi bi-calendar3"></i> Date Added
            </a>
        </div>
    </div>
    <div class="container mb-4 d-flex justify-content-end">
        <a href="/add-review" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Review
        </a>
    </div>

    <div class="container">
        <div class="row">
            <% books.forEach(function(book) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100" onclick="window.location.href='/book/<%= book.book_id %>'"
                        style="cursor: pointer;" onmouseover="this.style.backgroundColor='#f0f0f0'"
                        onmouseout="this.style.backgroundColor='white'">
                        <% if (book.image) { %>
                            <img src="<%= book.image %>" class="card-img-top" alt="Cover image of <%= book.title %>">
                            <% } %>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= book.title %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                        <%= book.author %>
                                    </h6>
                                    <p class="card-text mb-2">
                                        ISBN: <%= book.isbn %>
                                    </p>
                                    <p class="card-text text-muted mb-2">Published: <%= book.published_year %>
                                    </p>
                                    <p class="card-text mb-2">
                                        Genre: <%= book.genre %>
                                    </p>
                                    <p class="card-text mb-2">
                                        Date Added: <%= new Date(book.review_date).toLocaleDateString() %>
                                    </p>
                                    <p class="card-text mb-2">
                                        Rating: <%= book.rating %>
                                    </p>

                                </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <%- include('partials/footer') %>